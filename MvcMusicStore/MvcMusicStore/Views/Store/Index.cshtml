@model IEnumerable<MvcMusicStore.Models.Genre>

@{
    ViewBag.Title = "Store";
}

<h3>Browse Genres</h3>

<p>
    Select from @Model.Count() genres
</p>

<ul>
    @foreach (var item in Model)
    {
     //<li>@item.Name</li>
     //<li><a href="/Store/Browse?genre=@item.Name">@item.Name</a></li>
     <li>@Html.ActionLink(item.Name,"Browse",new { genre = item.Name})</li> //razor syntax Bu gösterimi kullan üst satır yerine
    }
</ul>

